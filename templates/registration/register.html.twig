{% extends 'base.html.twig' %}

{% block title %}Créer un compte sur Take'A'Vet{% endblock %}

{% block main %}
    <div class="main-content">
        <div class="main-title">
            <h1>Créer un compte
                {% if registrationForm.isAnHusbandry is not defined %}
                 pro
                {% endif %}
            </h1>
        </div>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.lastName) }}
        {{ form_row(registrationForm.firstName) }}
        {% if registrationForm.isAnHusbandry is defined %}
            {{ form_row(registrationForm.isAnHusbandry) }}
        {% endif %}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        {% if registrationForm.isAnHusbandry is defined %}
            <p>
                <a href="{{ path('app_register_vet') }}">Vous êtes vétérinaire, c'est ici !</a>
            </p>
        {% endif %}

        <button type="submit" class="btn btn-primary">Créer le compte</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
